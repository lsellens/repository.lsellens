<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="repository.lsellens"
       name="lsellens openelec addon repository"
       version="1.0.7"
       provider-name="lsellens">
  <extension point="xbmc.addon.repository"
             name="lsellens openelec addon repository">
    <info compressed="false">https://raw.githubusercontent.com/lsellens/repository.lsellens/repo/addons.xml</info>
    <checksum>https://raw.githubusercontent.com/lsellens/repository.lsellens/repo/addons.xml.md5</checksum>
    <datadir zip="true">https://raw.githubusercontent.com/lsellens/repository.lsellens/repo</datadir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Repository for Kodi addons by lsellens</summary>
    <description lang="en">Repository for AUDO and various other addons by lsellens</description>
    <platform>all</platform>
    <assets>
      <icon>resources/icon.png</icon>
    </assets>
  </extension>
</addon>

<addon id="metadata.scraper.moviesetartwork"
       name="Movie Set Artwork Scraper"
       version="0.0.3"
       provider-name="lsellens">
  <requires>
    <import addon="xbmc.addon" version="14.0.0"/>
    <import addon="xbmc.python" version="2.19.0"/>
    <import addon="xbmc.json" version="7.0.0"/>
  </requires>
  <extension point="xbmc.python.script"
             library="default.py">
        <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Movie Set Artwork Scraper</summary>
    <description>This addon will scrape set artwork from TheMovieDB.org.
    This product uses the TMDb API but is not endorsed or certified by TMDb.</description>
    <platform>all</platform>
    <license>GNU GENERAL PUBLIC LICENSE Version 3, 29 June 2007</license>
    <source>https://github.com/lsellens/metadata.scraper.moviesetartwork</source>
    <news>0.0.3 - Fix to work with shared mysql libraries</news>
    <assets>
      <icon>resources/icon.png</icon>
    </assets>
  </extension>
</addon>

<addon id="script.service.nodoze"
       name="nodoze"
       version="0.0.3"
       provider-name="lsellens">
  <requires>
    <import addon="xbmc.addon" version="14.0.0"/>
    <import addon="xbmc.python" version="2.19.0"/>
  </requires>
  <extension point="xbmc.service"
             library="service.py">
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">nodoze is a script to keep a server from sleeping while connections are established on configured ports.</summary>
    <description lang="en">nodoze is a script to keep a server from sleeping while connections are established on configured ports.</description>
    <platform>linux</platform>
    <license>GNU GENERAL PUBLIC LICENSE Version 3, 29 June 2007</license>
    <source>https://github.com/lsellens/script.service.nodoze</source>
    <news>0.0.3 - Removed netstat dependency</news>
    <assets>
      <icon>resources/icon.png</icon>
    </assets>
  </extension>
</addon>
</addons>
